<div class="row">
    <div class="col-lg-12">
        {% block filters %}
            {% form_theme filterForm '@RememberMe/_shared/form/filter_theme.html.twig' %}
            {{ form(filterForm) }}
        {% endblock %}
        <br>
        {% if entities|length > 0 %}
            <div class="table-responsive table-full-width">
                <table class="table table-hover table-striped">
                    <thead>
                    <tr>
                        {% block headings '' %}
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr {% block data_refresh %}data-refresh="{% block refresh '' %}"{% endblock %}>
                            {% block columns '' %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-danger">
                No records found
            </div>
        {% endif %}
    </div>
</div>

{% block pagination %}
    <div class="row">
        {% include '@RememberMe/_shared/pagination.html.twig' %}
    </div>
{% endblock %}